function collectDiamond (player, bottle) {
  bottle.kill();
  score += 1;

  // game.camera.fade(0x000000, 500);


  // SCORE
  scoreText.text = 'Drinks: ' + score;
  // ENERGY
  let energy = document.getElementById("energy");
  energy.value -= 2;


  if (energy.value === 0){
    alert('game over!!');
    window.location.reload(false);

  }



}




// alert('game over!! Your are way too drunk');


function collisionHandler (bullet, bottle) {


    bullet.kill();
    bottle.kill();
}


function fireBullet () {

    if (game.time.now > bulletSpeed)
    {

        bullet = bullets.getFirstExists(false);

        if (bullet)
        {
            bullet.reset(player.x, player.y + 8);
            bullet.body.velocity.y = -400;
            bulletSpeed = game.time.now + 200;
        }
    }

}


function collectCoffee (player, coffee) {
  coffee.kill();
  score -= 1;
  game.camera.resetFX();

  energy.value += 5;
  scoreText.text = 'Drinks: ' + score;
};
